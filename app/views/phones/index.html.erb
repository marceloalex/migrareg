<h1>Listing phones</h1>

<table>
  <tr>
    <th>Phone</th>
    <th>Customer</th>
    <th>Type phone</th>
    <th>Motive</th>
    <th>Status</th>
    <th>Disable date</th>
    <th>Geoloc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @phones.each do |phone| %>
  <tr>
    <td><%= phone.phone %></td>
    <td><%= phone.customer.code_customer %></td>
    <td><%= phone.type_phone.name %></td>
    <td><%= phone.motive %></td>
    <td><%= phone.status %></td>
    <td><%= phone.disable_date %></td>
    <td><%= phone.geoloc.district %></td>
    <td><%= link_to 'Show', phone %></td>
    <td><%= link_to 'Edit', edit_phone_path(phone) %></td>
    <td><%= link_to 'Destroy', phone, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

