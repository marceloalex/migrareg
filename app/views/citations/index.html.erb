<h1>Listing citations</h1>

<table>
  <tr>
    <th>Management</th>
    <th>Day</th>
    <th>User</th>
    <th>Hour</th>
    <th>Name</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @citations.each do |citation| %>
  <tr>
    <td><%= citation.management %></td>
    <td><%= citation.day %></td>
    <td><%= citation.user %></td>
    <td><%= citation.hour %></td>
    <td><%= citation.name %></td>
    <td><%= citation.phone %></td>
    <td><%= link_to 'Show', citation %></td>
    <td><%= link_to 'Edit', edit_citation_path(citation) %></td>
    <td><%= link_to 'Destroy', citation, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

