<h1>Listing offers</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Clasification</th>
    <th>Detail</th>
    <th>Response</th>
    <th>Code offer</th>
    <th>Line destiny</th>
    <th>Speedy destiny</th>
    <th>Wire destiny</th>
    <th>Auxiliar</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @offers.each do |offer| %>
  <tr>
    <td><%= offer.name %></td>
    <td><%= offer.clasification %></td>
    <td><%= offer.detail %></td>
    <td><%= offer.response %></td>
    <td><%= offer.code_offer %></td>
    <td><%= offer.line_destiny %></td>
    <td><%= offer.speedy_destiny %></td>
    <td><%= offer.wire_destiny %></td>
    <td><%= offer.auxiliar %></td>
    <td><%= link_to 'Show', offer %></td>
    <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
    <td><%= link_to 'Destroy', offer, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

