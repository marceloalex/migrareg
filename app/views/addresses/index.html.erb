<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Customer</th>
    <th>Type address</th>
    <th>Motive</th>
    <th>Status</th>
    <th>Disable date</th>
    <th>Geoloc</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.address %></td>
    <td><%= address.customer.code_customer %></td>
    <td><%= address.type_address.name %></td>
    <td><%= address.motive %></td>
    <td><%= address.status %></td>
    <td><%= address.disable_date %></td>
    <td><%= address.geoloc.district %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

